{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "outDir": "./tsout",
        "strict": true,
        "declaration": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./jsx.d.ts", "src/**/*.ts", "src/**/*.tsx"]
}
